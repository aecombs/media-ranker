<table class="table">
  <tr>
    <th>Name</th>
    <th>Sauce</th>
    <th>Cheese</th>
    <th>Toppings</th>
    <th>Voted On</th>
  </tr>
  <% if !pizzas.nil? && pizzas.length > 0 %>
    <% pizzas.each do |p| %>
      <tr>
        <td><%= link_to p.name, pizza_path(p.id), class: "title-text table-text" %></td>
        <td><%= p.sauce %></td>
        <td><%= p.cheese %></td>
        <td><%= p.toppings %></td>
        <td><%= Vote.find_by(pizza_id: p.id, user_id: user.id).created_at %></td>
      </tr>
    <% end %>
  <% end %>
</table>