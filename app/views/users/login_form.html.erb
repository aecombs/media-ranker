<div class="user">
 <% if @user.errors.any? %>
  <ul><% @user.errors.each do |column, message| %>
    <li><%= column.capitalize %> <%= message%>.</li>
  <% end %></ul>
<% end %>
  <%= form_with model: @user, url: login_path do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field(:username, class: "form-control") %>
    </div>
    <%= f.submit "Login", class: "button btn btn-primary form-group"%>
  <% end %>
</div>