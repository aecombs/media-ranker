<div class="user">
  <h2 class="title-text">List of Users</h2>

  <table class="table">
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
    <% if !@users.nil? && @users.length > 0 %>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user.id), class: "title-text table-text" %></td>
          <td><%= user.votes.length %></td>
          <td><%= user.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
  <hr>
</div>