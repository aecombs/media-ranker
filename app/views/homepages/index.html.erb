
<div class="homepage-index">
  <section class="spotlight">
    <h2 class="title-prefix">Pizza Spotlight:</h2><h2 class="title-text"><%= "#TODO: best pizza method" %></h2>
    <article><p><%= "x" %> votes - Topped with <%= "toppings" %></p></article>
  </section>
  <hr>
  <section class="top-pizzas">
    <article class="top-crusts">
      <h2 class="title-text"><strong>Top Thin Crust Pizzas</strong></h2>
      <hr>
      <ul>
      <%# Change this to reflect top ten stuff%>
      <% Pizza.order("id DESC").where(crust: "thin").each do |p| %>
        <li>
          <h3><%= link_to p.name, pizza_path(p.id), class: "title-text" %></h3>
          <p class="pizza-toppings"><%= p.toppings %></p>
          <p><%= p.votes.length %> votes</p>
        </li>
      <% end %>
      </ul>

    </article>
    <article class="top-crusts">
      <h2 class="title-text"><strong>Top Thick Crust Pizzas</strong></h2>
      <hr>
      <ul>
      <% Pizza.order("id DESC").where(crust: "thick").each do |p| %>
