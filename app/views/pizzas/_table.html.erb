<table class="table">
  <tr>
    <th>Votes</th>
    <th>Name</th>
    <th>Sauce</th>
    <th>Cheese</th>
    <th>Toppings</th>
    <th>Upvote</th>
  </tr>
  <% if !pizzas.nil? && pizzas.length > 0 %>
    <% pizzas.each do |pizza| %>
      <tr>
        <td><%= pizza.votes.length %></td>
        <td><%= link_to pizza.name, pizza_path(pizza.id), class: "title-text table-text" %></td>
        <td><%= pizza.sauce %></td>
        <td><%= pizza.cheese %></td>
        <td><%= pizza.toppings %></td>
        <% if session[:user_id] %>
          <td><button class="button btn btn-primary"><%= link_to "Upvote", user_votes_path(session[:user_id]), method: :post %></button></td>
        <% else %>
          <td><button class="button btn btn-primary"><%= link_to "Upvote", pizza_path(pizza.id) %></button></td>
        <% end %>
      </tr>
    <% end %> 
  <% end %>
</table>